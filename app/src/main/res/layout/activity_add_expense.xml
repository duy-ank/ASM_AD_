<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_background"
    android:padding="16dp"
    tools:context=".AddExpenseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_expense"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/mint_text"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Nhập số tiền -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_amount"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="@color/mint_text"
            android:backgroundTint="@color/mint_primary" />

        <!-- Các nút gợi ý số tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10,000"
                android:textColor="@color/mint_text"
                android:backgroundTint="@color/mint_soft_button"
                android:minHeight="48dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20,000"
                android:textColor="@color/mint_text"
                android:backgroundTint="@color/mint_soft_button"
                android:minHeight="48dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Danh mục -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_category"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/mint_text" />

        <GridLayout
            android:id="@+id/categoryGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- 1 icon danh mục mẫu -->
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/mint_soft_button"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="@string/category_food"
                app:tint="@color/mint_primary" />
        </GridLayout>

        <!-- Ngày giờ -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_time_placeholder"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textColor="@color/mint_text"
            android:background="@color/mint_background" />

        <!-- Mô tả -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_description"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="@color/mint_text"
            android:backgroundTint="@color/mint_soft_button" />

        <!-- Phương thức thanh toán -->
        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_method"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/mint_text" />

        <RadioGroup
            android:id="@+id/rgPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cash"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/mint_text" />

            <RadioButton
                android:id="@+id/rbCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/mint_text" />
        </RadioGroup>

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/mint_primary" />

    </LinearLayout>
</ScrollView>
