<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    tools:context=".MainActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_plan"
        android:scaleType="fitStart" />

    <!-- Tab switch -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp">

        <RadioGroup
            android:id="@+id/tabGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tabChiTieu"
                android:text="Chi tiêu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/green" />

            <RadioButton
                android:id="@+id/tabThuNhap"
                android:text="Thu nhập"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/gray" />
        </RadioGroup>
    </LinearLayout>

    <!-- Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:weightSum="2">

        <!-- Tổng hạn mức -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạn mức chi tiêu" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫0"
                android:textColor="#FF4081"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Trung bình/ngày -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung bình chi/ngày" />

            <TextView
                android:id="@+id/tvAvgPerDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫0"
                android:textColor="#00C853"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Lock button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/btnUnlock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lock"
            android:contentDescription="Mở khóa" />
    </LinearLayout>

    <!-- Category list -->
    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="60dp" />

    <!-- Bottom nav -->
    <include layout="@layout/bottom_nav" />
</LinearLayout>
